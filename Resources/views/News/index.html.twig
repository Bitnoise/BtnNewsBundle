{% extends '::base.html.twig' %}

{% block body %}
    <div class="span5">
        <h2>News</h2>

        {% for item in news %}
            <div class="news">
                <h3 class="title">{{ item.title }}</h3>
                <p class="date">{{ item.createdAt|date('F jS Y') }}</p>
                <p class="short">
                    {{ item.preview|raw }}
                </p>
                {% if item.text %}
                    <p><a href="{{ url('news_show', {'slug': item.slug}) }}">read more</a></p>
                {% endif %}
            </div>
        {% else %}
                Nothing here yet...
        {% endfor %}
    </div>
    <div class="span3">
        <h2>Press</h2>
    </div>
{% endblock %}