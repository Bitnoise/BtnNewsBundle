{% from 'BtnCrudBundle::breadcrumb.html.twig' import breadcrumb %}
{% extends '::control.html.twig' %}

{% block content %}

    <h2>News</h2>

    <table class="table table-striped table-bordered table-condensed">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ entity.slug }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Preview</th>
                <td>{{ entity.preview }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ entity.text }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

            <form action="{{ path('cp_news_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <a href="{{ path('cp_news') }}" class="btn">
            &laquo; {% trans %}crud.back{% endtrans %}
        </a>
        <button type="submit" class="btn btn-danger">{% trans %}crud.delete{% endtrans %}</button>
    </form>

{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb({'cp_news': 'crud.breadcrumb.list', 'cp_news_show': 'crud.breadcrumb.show'}) }}
{% endblock %}