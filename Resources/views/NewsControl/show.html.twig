{% from 'BtnAdminBundle:_macros:breadcrumb.html.twig' import breadcrumb %}
{% extends 'BtnAdminBundle::base.html.twig' %}

{% block content %}

    <h2>{% trans %}news.news{% endtrans %}</h2>

    <table class="table table-striped table-bordered table-condensed">
        <tbody>
            <tr>
                <th>{% trans %}news.id{% endtrans %}</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}news.slug{% endtrans %}</th>
                <td>{{ entity.slug }}</td>
            </tr>
            <tr>
                <th>{% trans %}news.title{% endtrans %}</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>{% trans %}news.preview{% endtrans %}</th>
                <td>{{ entity.preview }}</td>
            </tr>
            <tr>
                <th>{% trans %}news.text{% endtrans %}</th>
                <td>{{ entity.text }}</td>
            </tr>
            <tr>
                <th>{% trans %}news.category{% endtrans %}</th>
                <td>{{ entity.category }}</td>
            </tr>
            <tr>
                <th>{% trans %}news.created_at{% endtrans %}</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>{% trans %}news.updated_at{% endtrans %}</th>
                <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

            <form action="{{ path('cp_news_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <a href="{{ path('cp_news') }}" class="btn">
            &laquo; {% trans %}crud.back{% endtrans %}
        </a>
        <button type="submit" data-confirmation="true" data-message="{% trans %}crud.confirm.message{% endtrans %}" data-title="{% trans %}crud.confirm.title{% endtrans %}" class="btn btn-danger">{% trans %}crud.delete{% endtrans %}</button>
    </form>

{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb({'cp_news': 'crud.breadcrumb.list', 'cp_news_show': 'crud.breadcrumb.show'}) }}
{% endblock %}
