{% from 'BtnAdminBundle:_macros:breadcrumb.html.twig' import breadcrumb as bc %}
{% import 'BtnAdminBundle:_macros:link.html.twig' as lnk %}
{% import 'BtnAdminBundle:_macros:list.html.twig' as lst %}
{% extends 'BtnAdminBundle::list.html.twig' %}

{% block breadcrumb %}
    {{ bc({'btn_news_newscontrol_index': 'btn_admin.list'}) }}
{% endblock %}

{% block list_header %}
    {{ lst.header('btn_news.list') }}
{% endblock %}

{% block list_table %}
    <table class="{{ lst.table_class() }}">
        <thead>
            <tr>
                <th class="{{ lst.col_id_class() }}">{% trans %}btn_news.id{% endtrans %}</th>
                <th>{% trans %}btn_news.title{% endtrans %}</th>
                <th>{% trans %}btn_news.category{% endtrans %}</th>
                <th>{% trans %}btn_news.updated_at{% endtrans %}</th>
                <th class="{{ lst.col_act_class }}">{% trans %}btn_admin.actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td class="{{ lst.col_id_class() }}">{{ entity.id }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.category }}</td>
                <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td class="{{ lst.col_act_class }}">
                    {{ lnk.edit('cp_news_edit', { id: entity.id }) }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block list_pagination %}
    {{ knp_pagination_render(pagination) }}
{% endblock %}

{% block list_buttons %}
    {{ lnk.add('cp_news_new') }}
{% endblock %}
