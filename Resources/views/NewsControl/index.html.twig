{% from 'BtnCrudBundle::breadcrumb.html.twig' import breadcrumb %}
{% extends '::control.html.twig' %}

{% block content %}
    <h2>News list</h2>

    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>{% trans %}news.id{% endtrans %}</th>
                <th>{% trans %}news.slug{% endtrans %}</th>
                <th>{% trans %}news.title{% endtrans %}</th>
                <th>{% trans %}news.preview{% endtrans %}</th>
                <th>{% trans %}news.text{% endtrans %}</th>
                <th>{% trans %}news.category{% endtrans %}</th>
                <th>{% trans %}news.updated_at{% endtrans %}</th>
                <th>{% trans %}crud.actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.preview }}</td>
                <td>{{ entity.text }}</td>
                <td>{{ entity.category }}</td>
                <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>    <a href="{{ path('cp_news_show', { 'id': entity.id }) }}" class="btn btn-primary">{% trans %}crud.show{% endtrans %}</a>    <a href="{{ path('cp_news_edit', { 'id': entity.id }) }}" class="btn btn-primary">{% trans %}crud.edit{% endtrans %}</a>                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ knp_pagination_render(pagination) }}

            <a href="{{ path('cp_news_new') }}" class="btn btn-primary">{% trans %}crud.create_new{% endtrans %}</a>

{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb({'cp_news': 'crud.breadcrumb.list'}) }}
{% endblock %}
