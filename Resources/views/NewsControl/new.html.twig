{% from 'BtnAdminBundle:_macros:breadcrumb.html.twig' import breadcrumb %}
{% extends 'BtnAdminBundle::base.html.twig' %}

{% form_theme form 'BtnAdminBundle:Form:fields.html.twig' %}

{% block content %}

    <form action="{{ path('cp_news_create') }}" method="post" {{ form_enctype(form) }} class="well form-horizontal" novalidate>
          <fieldset>
              <legend>{% trans %}news.create{% endtrans %}</legend>
              {{ form_widget(form) }}
        </fieldset>
    </form>

    <a href="{{ path('cp_news') }}" class="btn btn-default">&laquo; {% trans %}crud.back{% endtrans %}</a>

{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb({'cp_news': 'btn_admin.list', 'cp_news_new': 'btn_admin.new'}) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
        '@BtnNewsBundle/Resources/public/js/*'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
