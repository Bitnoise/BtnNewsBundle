{% from 'BtnAdminBundle:Macros:breadcrumb.html.twig' import breadcrumb %}
{% import 'BtnAdminBundle:Macros:link.html.twig' as lnk %}
{% extends 'BtnAdminBundle::base.html.twig' %}

{% block content %}

    <form action="{{ form.vars.action }}" method="post" {{ form_enctype(form) }} class="well form-horizontal" novalidate>
        <fieldset>
            <legend>{% trans %}btn_news.create{% endtrans %}</legend>
            {{ form_widget(form) }}
        </fieldset>
    {{ form_end(form) }}

    {{ lnk.back('btn_news_newscontrol_index') }}

{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb({'btn_news_newscontrol_index': 'btn_admin.list', 'btn_news_newscontrol_new': 'btn_admin.new'}) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
        '@BtnNewsBundle/Resources/public/js/*'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
