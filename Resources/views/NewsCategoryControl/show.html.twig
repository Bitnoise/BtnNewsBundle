{% from 'BtnCrudBundle::breadcrumb.html.twig' import breadcrumb %}
{% extends '::control.html.twig' %}

{% block content %}

    <h2>{% trans %}news_category.news_category{% endtrans %}</h2>

    <table class="table table-striped table-bordered table-condensed">
        <tbody>
            <tr>
                <th>{% trans %}news_category.id{% endtrans %}</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}news_category.title{% endtrans %}</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>{% trans %}news_category.slug{% endtrans %}</th>
                <td>{{ entity.slug }}</td>
            </tr>
            <tr>
                <th>{% trans %}news_category.visible{% endtrans %}</th>
                <td>{{ entity.visible }}</td>
            </tr>
            <tr>
                <th>{% trans %}news_category.position{% endtrans %}</th>
                <td>{{ entity.position }}</td>
            </tr>
        </tbody>
    </table>

            <form action="{{ path('cp_newscategory_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <a href="{{ path('cp_newscategory') }}" class="btn">
            &laquo; {% trans %}crud.back{% endtrans %}
        </a>
        <button type="submit" data-confirmation="true" data-message="{% trans %}crud.confirm.message{% endtrans %}" data-title="{% trans %}crud.confirm.title{% endtrans %}" class="btn btn-danger">{% trans %}crud.delete{% endtrans %}</button>
    </form>

{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb({'cp_newscategory': 'crud.breadcrumb.list', 'cp_newscategory_show': 'crud.breadcrumb.show'}) }}
{% endblock %}
