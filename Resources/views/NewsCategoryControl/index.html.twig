{% from 'BtnCrudBundle::breadcrumb.html.twig' import breadcrumb %}
{% extends '::control.html.twig' %}

{% block content %}
    <h2>{% trans %}news_category.list{% endtrans %}</h2>

    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>{% trans %}news_category.id{% endtrans %}</th>
                <th>{% trans %}news_category.title{% endtrans %}</th>
                <th>{% trans %}news_category.slug{% endtrans %}</th>
                <th>{% trans %}news_category.visible{% endtrans %}</th>
                <th>{% trans %}news_category.position{% endtrans %}</th>
                <th>{% trans %}crud.actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.visible ? '<span class="glyphicon glyphicon-ok" ></span>' }}</td>
                <td>{{ entity.position }}</td>
                <td>
                  <a href="{{ path('cp_newscategory_show', { 'id': entity.id }) }}" class="btn btn-sm btn-primary button-show">{% trans %}crud.show{% endtrans %}</a>
                  <a href="{{ path('cp_newscategory_edit', { 'id': entity.id }) }}" class="btn btn-sm btn-primary button-edit">{% trans %}crud.edit{% endtrans %}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ knp_pagination_render(pagination) }}

    <a href="{{ path('cp_newscategory_new') }}" class="btn btn-primary">{% trans %}crud.create_new{% endtrans %}</a>

{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb({'cp_newscategory': 'crud.breadcrumb.list'}) }}
{% endblock %}
