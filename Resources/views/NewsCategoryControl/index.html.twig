{% from 'BtnAdminBundle:Macros:icon.html.twig' import gi %}
{% extends 'BtnAdminBundle:BaseCrud:index.html.twig' %}

{% block list_table_head_columns %}
    <th>{% trans %}btn_news.news_category.title{% endtrans %}</th>
    <th>{% trans %}btn_news.news_category.slug{% endtrans %}</th>
    <th>{% trans %}btn_news.news_category.visible{% endtrans %}</th>
{% endblock %}

{% block list_table_body_columns %}
    <td>{{ entity.title }}</td>
    <td>{{ entity.slug }}</td>
    <td>{{ entity.visible ? gi('ok') : gi('remove') }}</td>
{% endblock %}
